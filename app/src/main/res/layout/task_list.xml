<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    android:layout_marginBottom="10dp"
    app:mode="same_level">

    <FrameLayout
        android:id="@+id/llTLDelete"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="@drawable/ll_box_red">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete"
            android:tint="@color/colorWhite" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ll_layout_box"
            android:padding="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:tint="@color/colorGreen"
                app:srcCompat="@drawable/ic_whatsapp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTaskDueDateA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:text="10-03-2019"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtTaskStatusA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:gravity="right"
                    android:text="Pending"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtTaskNameA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textColor="@color/colorBlue"
                android:textStyle="bold"
                android:text="Android"/>

            <TextView
                android:id="@+id/txtTaskDescriptionA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                android:text="Android gjmkhk"
                android:maxLines="2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtReadMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorBlue"
                    android:text="Read More"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>