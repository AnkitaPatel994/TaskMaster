<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:dragEdge="right"
    app:mode="same_level">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llEdit"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/ll_box_right_green"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit"
                android:tint="@color/colorWhite" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llDelete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/ll_box_right_red"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_delete"
                android:tint="@color/colorWhite" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llCompanyListA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ll_layout_box"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:theme="@style/AppTheme">

            <TextView
                android:id="@+id/txtCompanyNameA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableRight="@drawable/ic_arrow_right_black_24dp"
                android:drawableTint="@color/colorBlue"
                android:text="Android"
                android:textColor="@color/colorBlue"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>
