<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iteration.taskmaster">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/tm"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/tm"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.PendingDueTaskActivity"
            android:label="@string/title_activity_pending_due_task"
            android:theme="@style/AppTheme.ActionBar"/>
        <activity
            android:name=".activity.CompleteTaskActivity"
            android:label="@string/title_activity_complete_task"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".activity.PendingTaskActivity"
            android:label="@string/title_activity_pending_task"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".activity.ViewAllTaskActivity"
            android:label="@string/title_activity_view_all_task"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".activity.AddTaskActivity"
            android:label="@string/title_activity_add_task"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.ActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>